{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "temp",
    "jest.config.ts"
  ]
}
